<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_smoke</item>
        <item name="colorPrimaryVariant">@color/black_pearl</item>
        <item name="colorOnPrimary">@color/nobel</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_smoke</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black_pearl</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_pearl</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_splash_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_pearl</item>
        <item name="android:navigationBarColor">@color/black_pearl</item>
    </style>

    <style name="TextSub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

    <style name="TextDesc">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

    <style name="TextSubResourceUser">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

    <style name="TextTotalResourceUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextUserInfo">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_smoke</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/black_pearl</item>
    </style>

    <style name="TextSubSettings">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/nobel</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextDescSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:gravity">center|left</item>
    </style>
</resources>